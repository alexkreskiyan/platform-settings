{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "name",
    "version",
    "title",
    "authors",
    "copyright",
    "summary",
    "tags",
    "description",
    "projects"
  ],
  "properties": {
    "name": {
      "description": "System package name",
      "type": "string",
      "pattern": "^(?:[A-z]+.)*[A-z]+$"
    },
    "version": {
      "description": "Version of the package. Required format: x.x.x.x\rFirst number is human-understable iteration of major updates.\rSecond one is index of backward-incompatible API changing iterations\rThird is index of backward-compatible API changing iterations\rForth one is for patching releases",
      "type": "string",
      "pattern": "^(?:[0-9]{1,5}.){3}[0-9]{1,5}$"
    },
    "title": {
      "description": "Human-friendly title of the package",
      "type": "string",
      "minLength": 15,
      "maxLength": 40
    },
    "authors": {
      "description": "Package authors list",
      "type": "array",
      "items": {
        "type": "string",
        "uniqueItems": true,
        "minLength": 2,
        "maxLength": 50
      }
    },
    "copyright": {
      "description": "Copyright details for the package",
      "type": "string",
      "minLength": 5,
      "maxLength": 50
    },
    "summary": {
      "description": "Short description of the package",
      "type": "string",
      "minLength": 40,
      "maxLength": 100
    },
    "tags": {
      "description": "List of tags and keywords that describe the package",
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "string",
        "uniqueItems": true,
        "minLength": 2,
        "maxLength": 30
      }
    },
    "description": {
      "description": "Description of the package",
      "type": "string",
      "minLength": 100,
      "maxLength": 500
    },
    "projects": {
      "description": "Package projects' folders list",
      "type": "array",
      "items": {
        "type": "string",
        "uniqueItems": true,
        "enum": [
          "src",
          "test"
        ]
      }
    }
  },
  "additionalProperties": false
}