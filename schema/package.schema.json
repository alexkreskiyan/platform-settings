{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "name",
    "title",
    "projects"
  ],
  "properties": {
    "name": {
      "description": "System package name",
      "type": "string",
      "pattern": "^(?:[A-z]+.)*[A-z]+$"
    },
    "title": {
      "description": "Human-friendly title of the package",
      "type": "string",
      "minLength": 15,
      "maxLength": 40
    },
    "projects": {
      "description": "Package projects' folders list",
      "type": "array",
      "items": {
        "type": "string",
        "uniqueItems": true,
        "enum": [
          "src",
          "test"
        ]
      }
    }
  },
  "additionalProperties": false
}